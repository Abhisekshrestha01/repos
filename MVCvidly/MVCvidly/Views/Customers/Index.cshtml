@model List<MVCvidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>
<table class="table">
    <tr>
        <th>
            Customers
        </th>
        
    </tr>
    @if (Model.Count == 0)
    {
        <tr> There are no Customers </tr>
    }
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.ActionLink("/Customers/Detail",@Html.DisplayFor(modelItem => item.Name), new { id = item.Id})
            </td>
        </tr>
    }

</table>

