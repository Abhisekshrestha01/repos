@model mvclogin.Models.Login
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Authentication", "Login",FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-1">
            @Html.LabelFor(m => m.Username)
        </div>
        <div class="col-lg-1">
            @Html.EditorFor(m => m.Username)
        </div>
        <div class="col-lg-1">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-1">
            @Html.LabelFor(m => m.Password)
        </div>
        <div class="col-lg-1">
            @Html.EditorFor(m => m.Password)
        </div>
        <div class="col-lg-1">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <input type="submit" id="button" value="Login" />
        </div>

        <div class="col-lg-1">

        </div>
    </div>
}


