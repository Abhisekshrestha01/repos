@model MVCVideo.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "SaveMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(m => m.Title)</h2>

@using (Html.BeginForm("SaveMovies", "Movies"))
{
    @Html.ValidationSummary(true, "Please fill all the form")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate,"{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.genres,"Id","Name"),"Select The Genre\\", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStuck)
        @Html.TextBoxFor(m => m.NumberInStuck, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStuck)
    </div>
    
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="tbn btn-default">Submit</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

